<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="paymentgateway_otpszep" sortOrder="290" showInDefault="1" showInWebsite="1" showInStore="1" translate="label">
        <label>OTP SZÃ‰P Card</label>
        <field id="title" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Title</label>
            <config_path>payment/bigfishpaymentgateway_pmgw_otpszep/title</config_path>
        </field>
        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enabled</label>
            <config_path>payment/bigfishpaymentgateway_pmgw_otpszep/active</config_path>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="card_pocket_id" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Available pocket</label>
            <config_path>payment/bigfishpaymentgateway_pmgw_otpszep/card_pocket_id</config_path>
            <source_model>Bigfishpaymentgateway\Pmgw\Model\ConfigProvider::getOtpCardPocketId</source_model>
        </field>
        <field id="allowspecific" translate="label" type="allowspecific" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Payment from Applicable Countries</label>
            <config_path>payment/bigfishpaymentgateway_pmgw_otpszep/allowspecific</config_path>
            <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
        </field>
        <field id="specificcountry" translate="label" type="multiselect" sortOrder="95" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Payment from Specific Countries</label>
            <config_path>payment/bigfishpaymentgateway_pmgw_otpszep/specificcountry</config_path>
            <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
            <can_be_empty>1</can_be_empty>
        </field>
        <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Sort Order</label>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/bigfishpaymentgateway_pmgw_otpszep/sort_order</config_path>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
    </group>
</include>